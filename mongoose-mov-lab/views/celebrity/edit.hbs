<h2>Update {{celebrityFromDb.name}} </h2>

<form action='/celebrity/update/{{celebrity._id}}' method='POST'>
  <div><label for='name'>Name</label>
    <input type='text' name='name' value='{{celebrity.name}}' /></div>
  <div><label for='occupation'>Occupation</label>
    <input
      type='text'
      name='occupation'
      value='{{celebrity.occupation}}'
    /></div>

  <label for='catch-phrase'>Catch-phrase</label>
  <input type='text' name='name' value='{{celebrity.catchPhrases}}' />
  <button type='submit'>Update this celeb</button>
</form>